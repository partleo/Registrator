<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:baselineAligned="false"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/date_picker_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:background="@drawable/rounded_edit_text"
            android:layout_weight="1">

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="36sp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                />

            <TextView
                android:id="@+id/month_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/year_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/rubik"
                android:textColor="@color/colorTransparentWhite2"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:weightSum="2"
            >

            <LinearLayout
                android:id="@+id/time_from_picker_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/rounded_edit_text"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/from"
                    android:textSize="14sp"
                    android:textColor="@color/colorTransparentWhite2"
                    android:fontFamily="@font/rubik"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    />

                <TextView
                    android:id="@+id/time_from_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_to_picker_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/rounded_edit_text"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/to"
                    android:textSize="14sp"
                    android:textColor="@color/colorTransparentWhite2"
                    android:fontFamily="@font/rubik"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    />

                <TextView
                    android:id="@+id/time_to_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:gravity="center"
        android:text="@string/work_number"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/work_number_input"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:padding="5dp"
        android:maxLength="10"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/rounded_edit_text"
        android:windowSoftInputMode="stateHidden"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:gravity="center"
        android:text="@string/description"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:maxHeight="120dp"
        android:layout_marginStart="24sp"
        android:layout_marginEnd="24sp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/rubik"
        android:gravity="center"
        android:background="@drawable/rounded_edit_text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_duty_button"
        android:text="@string/register"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="18dp"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/rounded_button"
        />

</LinearLayout>